<article class="post">
  <div class="title">
    <a href="{{post.post_comment}}" target="_blank">{{post.title}}</a>
    <span>({{post.comment}})</span>
  </div>
  <div class="meta">
   {{post.user.username}} on {{post.created_at}}
    |
    <a href="/post/{{post.id}}">{{post.comments.length}} comment(s)</a>
  </div>
</article>

